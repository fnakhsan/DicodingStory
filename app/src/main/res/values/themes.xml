<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dicoding</item>
        <item name="colorPrimaryVariant">@color/dicoding</item>
        <item name="colorOnPrimary">@color/white2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dicoding</item>
        <item name="colorSecondaryVariant">@color/dicoding</item>
        <item name="colorOnSecondary">@color/white2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--  Splash screen theme.  -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="textDefault">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textBold">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textExtraBold">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>