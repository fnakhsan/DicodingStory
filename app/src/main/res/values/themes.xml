<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textDefault">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textBold">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textExtraBold">
        <item name="color">@color/text_black</item>
        <item name="fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>